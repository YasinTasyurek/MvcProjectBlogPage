@model IEnumerable<MvcProjectBlogPage.Models.Article>
@{
    ViewBag.Title = "Details";
}
<h2>Details</h2>
<h4>Articles</h4>

@foreach (var item in Model)
{
   <div>
        <dl class="dl-horizontal">
            <dd>
                <h3>@item.Title</h3>
                <br />
            </dd>
            <dd>
                @if (item.PhotoUrl != null)
                {
                    <img src="~/Images/@item.PhotoUrl" alt="pic1" width="500px" height="200px" />
                }
            </dd>

            <dd>
                <br />
                <p>@item.Body</p>
            </dd>

            <dt>
                <br />
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
            </dt>
        </dl>
        <br />
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>