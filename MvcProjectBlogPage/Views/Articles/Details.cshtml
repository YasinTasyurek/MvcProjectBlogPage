        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Body)
